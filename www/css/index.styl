/*
drupal node
*/	
.node
	background transparent
	margin-top -15px
	margin-left 70px
	text-align center
	width: 430px
.title
	color #0099FF
	text-align center
	font-size 117%
.node .body
    margin-top -10px
	
.field-image
	float right
	margin-left 10px
	margin-bottom 10px

.node.page, .node.book
	border-radius 15px
	border 0px #3A4146 solid
	background-color black - rgba(black,item_alpha)
	padding 20px
	padding-top 0
	width 66%
	margin auto
	margin-top 40px
	margin-bottom 40px
	/*height: 100%
	overflow: scroll
	-webkit-overflow-scrolling: touch*/

.node.iframe
    background transparent
    padding 0
    margin auto
    margin-top 0

.node.iframe.ui-content
	padding 0

.node.iframe h2, .node.iframe p
	display none


/* 
media queries
*/

/* iPads (portrait and landscape) ----------- */
@media only screen and (min-device-width : 768px) and (max-device-width : 1024px)
	#sidemenu
    	margin-top -1px

/* iPads (landscape) ----------- */
@media only screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:landscape)
    #page-wrapper
    	margin-top 0px
/* iPads (portrait) ----------- */
@media only screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:portrait)
    #page-wrapper
    	margin-left -109px
    	transform: scale(0.75,0.75) translate(0px,0px)

