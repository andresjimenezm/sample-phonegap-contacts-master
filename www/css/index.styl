html
	overflow: auto
	width 100%
	height 100%
	background url(../assets/images/spinner-24x24-diap.gif) center center no-repeat #000
body
    background transparent
    color #7A7A7A
    font-family fontDefault
    margin 0
    padding 0
    min-height 100%
    height 100%
body *
	font-size: 98%
a, a:visited
	color #CCC
	text-decoration none
iframe
	overflow hidden
	padding 0
	margin 0
#intro
    background #000
    margin auto

/* sample selector */
