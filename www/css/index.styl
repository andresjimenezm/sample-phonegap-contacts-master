	border 2px solid #CACACA
	margin 5px
#select
	position relative
	font-size 110%
	font-weight bold
	text-align center
	padding 5px
	width 350px
	left 120px
#pager
	margin-top 14px
	margin-left -40px
	width 300px
#pager ul
	display inline
