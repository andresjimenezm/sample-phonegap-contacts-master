@import 'imports/mixin'
@import 'imports/normalize'
@import 'imports/main'

path_to_assets = '../assets'
item_alpha = 0.5
item_alpha_selected = 1-0.8
fontDefault = 'Roboto', sans-serif

/* custom styles */

*
